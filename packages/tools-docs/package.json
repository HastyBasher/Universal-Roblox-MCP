{
  "name": "@roblox-mcp/tools-docs",
  "version": "1.0.0",
  "description": "Documentation tools for Roblox MCP (Python bridge)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bridge": {
      "types": "./dist/bridge/index.d.ts",
      "import": "./dist/bridge/index.js"
    },
    "./proxy": {
      "types": "./dist/proxy/index.d.ts",
      "import": "./dist/proxy/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "roblox",
    "documentation",
    "python"
  ],
  "author": "Roblox MCP Contributors",
  "license": "MIT",
  "dependencies": {
    "@roblox-mcp/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
