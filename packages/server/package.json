{
  "name": "@roblox-mcp/server",
  "version": "1.0.0",
  "description": "Main server package for Roblox MCP",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "roblox-mcp": "./bin/roblox-mcp.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "bin/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "roblox",
    "server"
  ],
  "author": "Roblox MCP Contributors",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@roblox-mcp/core": "workspace:*",
    "@roblox-mcp/studio-bridge": "workspace:*",
    "@roblox-mcp/tools-studio": "workspace:*",
    "@roblox-mcp/tools-docs": "workspace:*",
    "@roblox-mcp/prompts": "workspace:*",
    "@roblox-mcp/resources": "workspace:*",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
